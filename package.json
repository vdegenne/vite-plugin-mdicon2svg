{
	"name": "vite-plugin-mdicon2svg",
	"description": "Plugin to transform md-icon to svgs",
	"type": "module",
	"main": "./lib/index.js",
	"module": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"exports": {
		".": {
			"default": "./lib/index.js",
			"types": "./lib/index.d.ts"
		}
	},
	"scripts": {
		"build": "wireit",
		"prepare": "husky"
	},
	"files": [],
	"devDependencies": {
		"@rollup/plugin-virtual": "^3.0.2",
		"@rollup/pluginutils": "^5.1.0",
		"fast-glob": "^3.3.2",
		"husky": "^9.0.5",
		"lint-staged": "^15.2.0",
		"mwc3-back-helpers": "^1.0.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.12",
		"wireit": "^0.14.3"
	},
	"wireit": {
		"build": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"tsconfig.json",
				"src"
			],
			"output": [
				"lib"
			]
		}
	},
	"lint-staged": {
		"README.md": "prettier --single-quote --no-bracket-spacing --no-use-tabs --write"
	}
}
