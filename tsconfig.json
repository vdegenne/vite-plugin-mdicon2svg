{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"useDefineForClassFields": false,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "lib",
		"types": [],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"paths": {
			"rollup/parseAst": ["./node_modules/rollup/dist/parseAst"]
		}
	},
	"include": ["./src/**/*.ts"]
}
